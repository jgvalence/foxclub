# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=development # development | production | test

# ==============================================================================
# DATABASE
# ==============================================================================
# Postgres connection string
# For local development: postgresql://user:password@localhost:5432/dbname
# For production (Neon/Supabase): Use connection pooling URL
DATABASE_URL="postgresql://user:password@localhost:5432/base_nextjs?schema=public"

# Direct URL (required for migrations with some providers like Neon)
DIRECT_URL="postgresql://user:password@localhost:5432/base_nextjs?schema=public"

# ==============================================================================
# NEXTAUTH / AUTHENTICATION
# ==============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-in-production"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional - uncomment and configure as needed)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# ==============================================================================
# SENTRY (Error Monitoring)
# ==============================================================================
# Get from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# ==============================================================================
# FILE UPLOADS (S3 / R2)
# ==============================================================================
# AWS S3 or Cloudflare R2
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME=""
S3_REGION="auto" # For Cloudflare R2, use "auto"
S3_ENDPOINT="" # For Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com

# Public CDN URL for serving files
NEXT_PUBLIC_CDN_URL=""

# ==============================================================================
# STRIPE (Payments)
# ==============================================================================
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ==============================================================================
# EMAIL (Transactional)
# ==============================================================================
# Using Resend, SendGrid, or similar
EMAIL_FROM="noreply@example.com"
EMAIL_API_KEY=""

# ==============================================================================
# RATE LIMITING
# ==============================================================================
# Upstash Redis for rate limiting (optional but recommended)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ==============================================================================
# FEATURE FLAGS (optional)
# ==============================================================================
NEXT_PUBLIC_ENABLE_FEATURE_X=false

# ==============================================================================
# ANALYTICS (optional)
# ==============================================================================
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ==============================================================================
# APP SETTINGS
# ==============================================================================
NEXT_PUBLIC_APP_NAME="Fox Club"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==============================================================================
# ADMIN
# ==============================================================================
# Comma-separated list of admin emails
ADMIN_EMAILS="admin@foxclub.com"

# ==============================================================================
# FOX CLUB - PRODUCTION SETUP
# ==============================================================================
# Used by scripts/setup-production.ts for initial admin creation
ADMIN_EMAIL="admin@foxclub.com"
ADMIN_PASSWORD="" # Set this when running setup-production.ts
ADMIN_NAME="Admin Fox"
