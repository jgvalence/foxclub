// Prisma Schema
// @see https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==============================================================================
// USER & AUTH MODELS
// ==============================================================================

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String? // Nullable for OAuth users
  role          UserRole  @default(USER)
  approved      Boolean   @default(false) // User must be approved by admin to fill forms

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts   Account[]
  sessions   Session[]
  userForm   UserForm?
  adminNotes AdminNote[]

  @@index([email])
  @@index([approved])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==============================================================================
// FOX CLUB - QUESTION & FORM MODELS
// ==============================================================================

enum QuestionType {
  TYPE_1 // Score (1-4), Top, Bot, Talk, Notes
  TYPE_2 // Score (1-4), Talk, Include, Notes
}

// Question families group questions by category
model QuestionFamily {
  id    String       @id @default(cuid())
  label String // e.g., "Bougies / cire chaude", "Massages"
  type  QuestionType
  order Int          @default(0) // Display order

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  questions Question[]

  @@index([order])
  @@map("question_families")
}

// Individual questions within a family
model Question {
  id               String @id @default(cuid())
  questionFamilyId String
  text             String @db.Text // Question text in French
  order            Int    @default(0) // Display order within family

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  questionFamily QuestionFamily @relation(fields: [questionFamilyId], references: [id], onDelete: Cascade)
  answers        FormAnswer[]

  @@index([questionFamilyId])
  @@index([order])
  @@map("questions")
}

// One form per user - contains all their answers
model UserForm {
  id        String   @id @default(cuid())
  userId    String   @unique
  submitted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers FormAnswer[]

  @@index([userId])
  @@index([submitted])
  @@map("user_forms")
}

// Individual answer to a question - structure varies by question type
model FormAnswer {
  id         String @id @default(cuid())
  formId     String
  questionId String

  // Common fields (both types)
  score Int // 1-4 scale
  notes String? @db.Text

  // TYPE_1 specific fields
  top  Boolean? // Only for TYPE_1
  bot  Boolean? // Only for TYPE_1
  talk Boolean? // Both types

  // TYPE_2 specific fields
  include Boolean? // Only for TYPE_2

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  form     UserForm @relation(fields: [formId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([formId, questionId]) // One answer per question per form
  @@index([formId])
  @@index([questionId])
  @@map("form_answers")
}

// Admin notes on user profiles (private to admins)
model AdminNote {
  id      String  @id @default(cuid())
  userId  String
  adminId String // ID of admin who created the note
  content String  @db.Text
  pinned  Boolean @default(false) // Pin important notes to top

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([adminId])
  @@index([pinned])
  @@map("admin_notes")
}

// ==============================================================================
// AUDIT LOG (Optional - for tracking important actions)
// ==============================================================================

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  PAYMENT
  REFUND
  USER_APPROVED
  USER_REJECTED
  FORM_SUBMITTED
  ADMIN_NOTE_ADDED
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String?
  action    AuditAction
  entity    String // e.g., "User", "Order", "Product"
  entityId  String
  metadata  Json? // Additional context
  ipAddress String?
  userAgent String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
